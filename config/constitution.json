{
  "project": "recycling",
  "version_family": "v1.x",
  "enforcement": {
    "metaprompting": true,
    "self_learning": true,
    "auto_append_discoveries": true,
    "auto_append_issues": true,
    "timestamp_entries": true,
    "block_if_meta_inactive": true
  },
  "paths": {
    "goals": "meta/goals.md",
    "tasks": "meta/tasks.md",
    "state": "meta/state.json",
    "architecture": "meta/architecture.md",
    "stakeholders": "meta/stakeholders.md",
    "standards": "meta/standards.md",
    "discoveries": "meta/discoveries.md",
    "issues": "meta/issues.md",
    "decisions": "meta/decisions"
  },
  "session_validation": {
    "require_goals_present": true,
    "require_state_update_on_close": true,
    "require_discovery_append_on_close": true
  },
  "modules_required": [
    "logistics",
    "materials",
    "community",
    "tech",
    "finance"
  ],
  "kpis": {
    "diversion_rate_pct": true,
    "contamination_pct": true,
    "cost_per_ton_thb": true,
    "on_time_pickup_pct": true,
    "bin_overflow_rate_pct": true,
    "participation_rate_pct": true,
    "co2e_avoided_per_ton": true,
    "nps": true
  },
  "influences": {
    "path": "docs/Influences.md",
    "max_age_days": 90,
    "required": false
  },
  "pending_changes": {
    "path": "meta/pending_changes.md",
    "required": false
  },
  "change_log": {
    "path": "meta/change_log/",
    "required": false
  },
  "discovery_responses": {
    "path": "discovery_responses.md",
    "schema": ["Answer", "Evidence", "Assumptions", "Risks", "Decisions", "FileUpdates", "RFI"]
  },
  "persistence": {
    "require_disk_write_for_deliverables": true,
    "auto_save": true,
    "audit_output_path": "070925assessment",
    "action_plan_path": "070925_action_plan.md",
    "constitution_path": "CONSTITUTION.md",
    "on_chat_close_save_state": true
  },
  
  "workflow": {
    "task_view": "dependency_graph",
    "prefer_dependency_over_deadline": true,
    "require_todo_updates": true,
    "require_status_update_messages": true,
    "phase_handshake_messages": true,
    "change_log_first": true
  },
  
  "policies": {
    "read_entire_documents": true,
    "persist_outputs_to_disk": true
  },
  
  "versioning": {
    "label_template": "YYMMDDassessment_v{n}",
    "diff_against": "070925assessment"
  }
}

